<ul class="nav nav-pills hidden-xs">
    {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} active{{/if}}" role="presentation"><a href="{{url absolute="true"}}">{{label}}</a></li>
    {{/foreach}}
</ul>
<select class="form-control mobile-nav visible-xs-block">
	{{#foreach navigation}}
		<option value="{{url absolute="true"}}" {{#if current}} selected {{/if}}>{{label}}</option>
	{{/foreach}}
</select>